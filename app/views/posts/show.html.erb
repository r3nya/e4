    <div class="response-to-message">
      <%= form_for @comment do |f| %>
          <%= render 'comments/comment_form', :f => f, :object => @post.id, :type => 'post' %>
          <button type="submit"><%= t 'common.actions.add', :obj  => (t 'objects.comment.self') %></button>
      <% end %>
    </div>
  </div>
  <div class="clear"></div>
