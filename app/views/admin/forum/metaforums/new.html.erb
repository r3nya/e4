<% provide :title, (t 'objects.metaforum.creation') %>

<header>
  <h4><%= t 'objects.metaforum.creation' %></h4>
</header>

<article>
  <%= render 'error_messages' %>
  <%= form_for @metaforum,
        :url => {
                :controller => :metaforums,
                :action => :create,
        } do |f| %>
    <%= render 'metaforum_form', :f => f %>
    <button type="submit"><%= t 'common.actions.add', :obj => (t 'objects.metaforum.self') %></button>
  <% end %>
</article>
